<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.1
			      http://maven.apache.org/xsd/assembly-2.1.1.xsd">
  <!-- TBC: creates ArithIntOctave-1.0-SNAPSHOT-octave-package.tar.gz 
       or more generally, 
       project.artifactId-project.version-assembly.id.assembly.formats.format 
       which is not conform with what octave expects: 
       It whould expect empty id, but assembly plugin does not support that. -->
  <id>installer</id>
  <formats>
    <format>tgz</format>
  </formats>
  <!--includeBaseDirectory>false</includeBaseDirectory-->
  <fileSets>
    <!-- Files fundamental to the projet -->
    <fileSet>
      <directory>target/classes/eu/simuline/qMngmnt/installation/</directory>
      <outputDirectory>${file.separator}</outputDirectory>
      <includes>
        <include>*.sh</include>
      </includes>
      <fileMode>0744</fileMode>
    </fileSet>
    <!-- TBD: this is a workaround of a bug in the resources plugin 
    resetting the file permissions. 
    On the other hand, we do not use the most current version. 
    If we manage to update, check whether the bug sill persists 
    and if not eliminate this workaround -->
   <fileSet>
      <directory>target/classes/eu/simuline/qMngmnt/installation/</directory>
      <outputDirectory>${file.separator}</outputDirectory>
      <excludes>
        <exclude>*.sh</exclude>
      </excludes>
      <!--fileMode>0644</fileMode-->
    </fileSet>
  </fileSets>

  <!--dependencySets>
    <dependencySet>
      <outputDirectory>${file.separator}inst</outputDirectory>
      <includes>
        <include>${arithGrp}:${arithId}</include>
      </includes>
    </dependencySet>
  </dependencySets-->
</assembly>
